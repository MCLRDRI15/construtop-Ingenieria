{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@HOC": ["src/components/HOC/index"],
      "@layouts": ["src/components/layouts/index"],
      "@navbars": ["src/components/navbars/index"],
      "@inputs": ["src/components/inputs/index"],
      "@modals": ["src/components/modals/index"],
      "@actions/global": ["src/redux/actions/global"],
      "@reducer/global": ["src/redux/reducers/global"],
      "@thunks/global": ["src/redux/thunks/global"]
    },
    "incremental": true
  },
  "exclude": ["node_modules", ".next", "out"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js"]
}
